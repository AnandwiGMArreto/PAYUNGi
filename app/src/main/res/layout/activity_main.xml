    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAlignment="center"
        android:background="@drawable/search_bar"
        android:hint="Location"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="425dp"
        android:layout_height="531dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintVertical_bias="0.799"
        tools:context=".Maps" />

    <RelativeLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rectangle"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/qrCodeShow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_home"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Home"
            android:layout_alignStart="@id/homeButton"
            android:layout_alignEnd="@id/homeButton"
            android:layout_marginTop="60dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/historyButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_history"
            android:layout_marginStart="80dp"
            android:layout_toLeftOf="@id/qrCodeShow"
            android:layout_marginEnd="20dp"
            android:layout_alignTop="@id/homeButton" />

        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="History"
            android:layout_alignStart="@id/historyButton"
            android:layout_alignEnd="@id/historyButton"
            android:layout_alignTop="@id/tvHome"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvRent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Rent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textAlignment="center"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>